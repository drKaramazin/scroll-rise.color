{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true
  },
  "include": [
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/lib/specs"
  ]
}
